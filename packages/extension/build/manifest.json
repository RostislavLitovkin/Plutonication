{
  "author": "Valentina GÃ³mez, Rostislav Litovkin",
  "description": "Connect any Plutonication compatible wallet to any dApp that supports polkadot.js-extensions.",
  "homepage_url": "https://plutonication.com",
  "name": "Plutonication extension (polkadot.js)",
  "short_name": "Plutonication extension (polkadot.js)",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Plutonication extension",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "icons": {
    "16": "images/appicon.png",
    "32": "images/appicon.png",
    "48": "images/appicon.png",
    "64": "images/appicon.png",
    "128": "images/appicon.png"
  },
  "web_accessible_resources": [
    "page.js"
  ],
  "content_security_policy": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; object-src 'self'",
  "version": "1.0.0"
}