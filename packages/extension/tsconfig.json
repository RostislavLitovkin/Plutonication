{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES6",
    "target": "es2017",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "scripts/**/*.tsx",
    "scripts/**/*.ts",
    "popup/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "lib"
  ]
}
